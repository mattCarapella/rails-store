<% if line_item == @current_item %>
	<tr class="line-item-highlight">
<% else %> 	
	<tr>
<% end %>
	<td class="quantity"><%= line_item.quantity %> &times; </td> 
	<td><%= truncate(line_item.product.title, length: 40) %></td> 
	<td class="price"><%= number_to_currency(line_item.total_price) %></td>	
	<td><%= link_to image_tag("trash.png"), line_item, method: :delete, :class => 'trash-link' %></td>
</tr>