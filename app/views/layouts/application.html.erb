<!DOCTYPE html>
<link href="https://fonts.googleapis.com/css?family=Roboto:300" rel="stylesheet">
<html>
  <head> 
    <title>Zeb</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>    
  </head>

  <body> 
    <header class="main"> 
      <h1>zeb.</h1>
      <h1><%= @page_title %></h1>

    </header>

    <section class="content"> 
      <nav class="side_nav"> 
         <% if @cart %> 
          <div id="cart" class="carts">          
            <%= render_if @cart && @cart.line_items.any?, @cart %>
          </div>
        <% end %>
        
          
          <ul> 
            <% if current_user %> 
              <li><%= link_to image_tag("__account_white.png", alt: 'login', class: "navbar-link"), edit_user_registration_path, :class => 'navbar-link' %></li> 
            <% else %> 
              <li><%= link_to image_tag("__account_white.png", alt: 'login', class: "navbar-link"), new_user_session_path %></li>
            <% end %>
            <li><%= link_to image_tag("__home_white.png", alt: 'home', class: "navbar-link"), store_index_url %></li>
            <li><%= link_to image_tag("__question_white.png", alt: 'questions', class: "navbar-link"), questions_url %></li>
            <li><%= link_to image_tag("__contact_white.png", alt: 'contact', class: "navbar-link"), contact_url %></li> 
            <% if current_user %>
              <li><%= link_to image_tag("__logout_white.png", alt: 'logout', class: "navbar-link"), destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> </li>
            <% end %> 
          </ul>

      </nav>
      <main class='<%= controller.controller_name %>'>
        <%= yield %>
      </main>
    </section>
  </body>
</html>